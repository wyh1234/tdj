<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle" >  //长方形
            <!-- 填充的颜色 -->			//背景颜色
            <solid android:color="#FFFFFF" />  //@android:color/transparent 透明颜色
            //边框线  长度  -颜色
            <stroke android:width="1dp"
                android:color="#2898EB"/>
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="5dip" />	//越大四个脚的弧度越大
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="3dp" android:left="40dp" android:right="40dp" android:top="3dp" />
        </shape>
    </item>
