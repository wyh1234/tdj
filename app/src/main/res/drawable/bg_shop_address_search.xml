<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--//长方形-->
    <!--&lt;!&ndash; 填充的颜色 &ndash;&gt;			//背景颜色-->
    <!--//@android:color/transparent 透明颜色-->
    <solid android:color="@color/gray_f6f4f4" />
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <!--/越大四个脚的弧度越大-->
    <corners android:radius="5dip" />
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
</shape>
