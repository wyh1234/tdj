<?xml version="1.0" encoding="utf-8"?><!--根布局，常用作蒙层（就是变暗的背景）-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8f000000">
    <!--播放动画的内容，可以认为是popup的主要内容布局-->
    <RelativeLayout
        android:id="@+id/popup_anima"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:background="@drawable/welcome_enter">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@mipmap/welcome_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="55dp"
                    android:text="欢迎入驻"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="店铺通过审核"
                android:textColor="@color/gray_66"
                android:textSize="16sp">

            </TextView>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="您获得了一份30天专卖店体验服务"
                android:textColor="@color/gray_69"
                android:textSize="14sp">

            </TextView>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv2"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="去发布商品吧~"
                android:textColor="@color/gray_69"
                android:textSize="14sp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv3"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="15dp">

                <Button
                    android:id="@+id/welcome_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="发布商品"

                    android:layout_weight="1"
                    android:background="@drawable/my_btn_bgs" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="40dp" />

                <Button
                    android:id="@+id/welcome_cancel_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="取消"
                    android:layout_weight="1"
                    android:background="@drawable/welcome_btn" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>