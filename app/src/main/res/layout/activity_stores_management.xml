<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.shopManagement.StoresManagementActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/current_shop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:layout_marginStart="5dp"
            android:textColor="@color/orange_yellow_ff7e01"
            android:text="当前收货地址"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gainsboro"/>
    <RelativeLayout
        android:id="@+id/rl_current_shop"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_select_current_shop"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/select_current_shop" />
        <TextView
            android:id="@+id/tv_current_shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/iv_select_current_shop"
            android:layout_toStartOf="@+id/tv_item_shop_title"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"
            tools:ignore="UnknownId" />
        <TextView
            android:id="@+id/tv_expired_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_current_shop_title"
            android:layout_alignTop="@id/tv_current_shop_title"
            android:background="@drawable/bg_expired_red"
            android:textSize="@dimen/low_text"
            android:visibility="invisible"
            android:textColor="@color/red_dark" />
        <TextView
            android:id="@+id/tv_current_shop_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tv_current_shop_title"
            android:layout_alignStart="@+id/tv_current_shop_title"
            android:layout_toStartOf="@+id/tv_detail"
            android:textSize="@dimen/low_text"
            android:gravity="center_vertical"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/gray"
            android:layout_toStartOf="@+id/iv_enter_shop_detail"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:text="详情"/>
        <ImageView
            android:id="@+id/iv_enter_shop_detail"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/enter_shop_detail"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/gray_6e" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/other_stores"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:layout_marginStart="5dp"
            android:textColor="@color/orange_yellow_ff7e01"
            android:text="其他收货地址"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_6e"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_other_stores"
        android:layout_width="match_parent"
        android:background="@color/gray_6e"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_create_new_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/s_orage_yellow_round_rect"
        android:layout_gravity="bottom"
        android:textSize="@dimen/large_text"
        android:textColor="@color/white"
        android:text="新建收货地址"/>
</LinearLayout>