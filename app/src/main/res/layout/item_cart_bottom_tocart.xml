<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_db" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="10dp">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="50dp">

            <com.base.glide.GlideImageView
                android:id="@+id/shopping_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_main_cart_gray" />

            <TextView
                android:id="@+id/count_image"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="end"
                android:background="@drawable/z_round_rect_solid_red"
                android:gravity="center"
                android:includeFontPadding="false"
                android:minWidth="16dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="购物车"
                android:textSize="12sp" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/fl_enshrine"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="35dp">

            <com.base.glide.GlideImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/s_enshrine_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="收藏"
                android:textSize="12sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_customer_service"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:visibility="invisible"
            android:layout_marginStart="35dp">

            <com.base.glide.GlideImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_customer_service_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="客服"
                android:textSize="12sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/action_cart"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/r_orange_ff7d01"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="购物车"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>