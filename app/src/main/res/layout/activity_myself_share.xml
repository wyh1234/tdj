<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.base.glide.GlideImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:id="@+id/img_share"/>

    <TextView
        android:id="@+id/text_invite_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/z_rect_orange_yellow"
        android:text="我的邀请码"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/orange_yellow_ff7d01"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/r_round_rect_solid_orange_ff7d01"
        android:gravity="center"
        android:text="我要分享"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_share_reward_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@color/black"
        android:drawablePadding="5dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableRight="@mipmap/ic_question_mark_gray"
        android:textSize="@dimen/middle_text"
        android:text="成功分享奖励积分记录"/>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_6e"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/low_text"
            android:text="姓名"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/low_text"
            android:text="手机号"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/low_text"
            android:text="操作"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/low_text"
            android:text="日期"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:textSize="@dimen/low_text"
            android:text="奖励积分"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_share_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>