<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/integral_toobar_layout" />
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="37sp"
        android:textColor="@color/black_63"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/red_f0"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="37dp"
        android:background="#DFDEDE"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_order_no"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:textColor="@color/gray_69"
        android:textSize="13sp"
        android:layout_height="wrap_content" />
    <RelativeLayout
         android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="65dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_height="65dp" />
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_toRightOf="@+id/iv"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_toRightOf="@+id/tv_name"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:textColor="@color/gray_66"
                android:textSize="13sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rls"
            android:layout_below="@+id/rl"
            android:layout_toRightOf="@+id/iv"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView

            android:id="@+id/tv_content"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textColor="@color/gray_66"
            android:textSize="13sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_num"
            android:layout_toRightOf="@+id/tv_content"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textColor="@color/red_f0"
            android:textSize="13sp"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/line_spec"
            android:layout_below="@+id/rls"
            android:layout_toRightOf="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/z_round_rect_orange_ff7d01"
            android:orientation="horizontal"
           >

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="3dp"
                android:src="@mipmap/ic_order" />

            <TextView
                android:id="@+id/goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/red_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/goods_unit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_dark"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/line_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="/"
                    android:textColor="@color/red_dark"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="共:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/cart_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:text="元"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#DFDEDE"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="14dp"
        android:textColor="#222222"
        android:textSize="@dimen/sp_14"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_ck"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/sp_14"
        android:textColor="#222222"
        android:layout_marginLeft="14dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_sm_name"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/sp_14"
        android:textColor="#222222"
        android:layout_marginLeft="14dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_sm_phone"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_14"
        android:textColor="#222222"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:background="@color/gray_f5"
        android:layout_height="match_parent"/>
</LinearLayout>