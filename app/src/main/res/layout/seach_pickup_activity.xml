<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.login.ShopAddressActivity">
    <com.amap.api.maps2d.MapView
        android:id="@+id/mv_shop_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp_40"
            android:src="@mipmap/pickup_back"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="50dp"
            android:text="确定"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginRight="15dp"
            android:background="@drawable/pickup_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="25dp" />

    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/pickup_bg"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_xl"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/xiala"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="350dp">
        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_current_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_text"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:background="@mipmap/expand"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/bg_shop_address_search">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@mipmap/search_gray"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/et_shop_address"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:textSize="@dimen/middle_text"
                    android:singleLine="true"
                    android:hint="请输入您的收货地址" />
                <ImageView
                    android:id="@+id/iv_clear_keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="invisible"
                    android:background="@mipmap/phone_clear"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_cancel_search"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:textSize="@dimen/middle_text"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="#FF7D01"
                android:text="取消"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/ll_search"
            android:background="@color/gainsboro"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_shop_address_list"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>