<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_add_attention"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/s_attention_drawable" />

        <com.base.glide.GlideImageView
            android:id="@+id/shop_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:siv_shape_type="circle" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="3412314423"
            android:layout_toEndOf="@+id/shop_logo"
            android:textColor="@color/black_63"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_isShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/shop_name"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:background="@drawable/btn_shap"
            android:drawableLeft="@mipmap/myselfsup_qj"
            android:text="旗舰店"
            android:gravity="center"
            android:layout_toRightOf="@+id/shop_name"
            android:textColor="@color/white"
            android:textSize="9sp" />
        <LinearLayout
            android:id="@+id/shop_evaluate_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shop_name"
            android:layout_toEndOf="@id/shop_logo">

            <include layout="@layout/item_shop_evaluate_new" />
        </LinearLayout>

        <TextView
            android:id="@+id/realName_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_evaluate_1"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_toEndOf="@+id/shop_logo"
            android:background="@drawable/s_round_rect_blue_2898_gr6a"
            android:padding="2dp"
            android:text="实名认证"
            android:textColor="@color/s_blue2898_gr6a"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/foodQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_evaluate_1"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_toEndOf="@+id/realName_check"
            android:background="@drawable/s_round_rect_green_gr6a"
            android:padding="2dp"
            android:text="经营许可证"
            android:textColor="@color/s_green_gr6a"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/licenceDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_evaluate_1"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/foodQuality"
            android:background="@drawable/s_round_rect_red_gr6a"
            android:padding="2dp"
            android:text="营业执照"
            android:textColor="@color/s_red_gr6a"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shop_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人：" />

        <TextView
            android:id="@+id/realname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textView_1"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textView_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_1"
            android:layout_marginTop="5dp"
            android:text="电话：" />

        <TextView
            android:id="@+id/phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textView_2"
            android:layout_toEndOf="@+id/textView_2"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textView_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_2"
            android:layout_marginTop="5dp"
            android:text="地址：" />

        <TextView
            android:id="@+id/market_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textView_3"
            android:layout_toEndOf="@+id/textView_3"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textView_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_3"
            android:layout_marginTop="5dp"
            android:text="市场：" />

        <TextView
            android:id="@+id/shop_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textView_4"
            android:layout_toEndOf="@+id/textView_4"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textView_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/shop_market"
            android:text="编号：" />

        <TextView
            android:id="@+id/shop_market_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textView_5"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/textView_5"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textView_5"
            android:layout_toEndOf="@+id/shop_market_id"
            android:singleLine="true"
            android:text="号" />

    </RelativeLayout>

    <!--    <TextView
            android:id="@+id/expanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="end"
            android:padding="15dp"
            android:text="展开" />-->


    <View
        android:id="@+id/views"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_f5" />
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.base.widget.MyRadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="口碑" />
            <LinearLayout
                android:id="@+id/price_xl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:text="销量" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/xl_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/xl_right" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/price_sort"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="end"
                    android:padding="15dp"
                    android:text="价格" />


                <LinearLayout
                    android:id="@+id/price_jl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/price_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/yuanshi" />
                </LinearLayout>
            </LinearLayout>


            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="新品"
                android:visibility="visible" />
        </com.base.widget.MyRadioGroup>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_db" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        >

        <CheckedTextView
            android:id="@+id/ctv_retail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/s_whole_batch"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="零售"
            android:textColor="@color/s_gray66_orage_yellow_ff7d01" />



        <CheckedTextView
            android:id="@+id/ctv_isP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/s_whole_batch"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="整件"
            android:textColor="@color/s_gray66_orage_yellow_ff7d01" />


        <CheckedTextView
            android:id="@+id/ctv_jin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/s_whole_batch"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="精品"
            android:textColor="@color/s_gray66_orage_yellow_ff7d01" />


        <CheckedTextView
            android:id="@+id/ctv_ordinary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/s_whole_batch"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="通货"
            android:textColor="@color/s_gray66_orage_yellow_ff7d01" />



    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_f5" />

    <LinearLayout
        android:id="@+id/ll_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="在出售商品"
            android:textColor="@color/black_63"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="end"
            android:text="共"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:text="0"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="件"
            android:textSize="16sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_db" />
    <!--    <android.support.v7.widget.RecyclerView
            android:id="@+id/shop_goods_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white" />-->

</LinearLayout>