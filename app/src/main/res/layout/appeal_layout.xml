<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv"
        android:text="申诉原因："
        android:textColor="@color/black_63"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/ed_results"
        android:layout_width="match_parent"
        android:gravity="left"
        android:paddingLeft="68dp"
        android:background="@null"
        android:text="我是一个分上就看看哦啊"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/gray_69"
        android:textSize="14sp"
        android:maxLength="200"
        android:textColorHint="@color/gray_6b"
        android:layout_height="150dp">
    </EditText>
    <TextView
        android:id="@+id/tv1"
        android:layout_below="@+id/ed_results"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="12sp"
        android:textColor="@color/gray_69"
        android:text="至少输入8个字"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@+id/tv1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/gray_f5"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/phoneview_list"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <Button
        android:id="@+id/post_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/r_round_rect_solid_blue_2898eb"
        android:text="提交"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>