<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_color">
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/text_return_amount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请换货  ："
                android:textColor="@color/gray_66"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_return_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/gray_66"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/text_return_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="斤"
                android:textColor="@color/gray_66"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_return_money_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="换货金额  ："
                    android:textColor="@color/gray_66"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_return_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/gray_66"
                    android:textSize="16sp"
                    android:singleLine="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/gray_66"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="折后单价  ："
                android:textColor="@color/gray_66"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_single_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20元/斤"
                android:textColor="@color/gray_66"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/text_less_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(因使用有代金券)"
                android:textColor="@color/orange_yellow_ff7d01"
                android:textSize="16sp"
                android:singleLine="true"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
