<?xml version="1.0" encoding="utf-8"?><!--根布局，常用作蒙层（就是变暗的背景）-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8f000000"
    >
    <!--播放动画的内容，可以认为是popup的主要内容布局-->
    <RelativeLayout
        android:id="@+id/popup_anima"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/del_address_popu_bg"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv1"
                    android:textColor="@color/black_63"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="服务协议和隐私政策"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_below="@+id/tv1"
                android:textColor="@color/black_63"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:textSize="14sp"
                android:textColorLink="@color/alipay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <View
                    android:background="@color/gray_f5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_cancel"
                    android:textSize="18dp"
                    android:text="不同意"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/alipay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tv_ok"
                        android:textSize="18dp"
                        android:text="同意并继续"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/alipay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>



        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>