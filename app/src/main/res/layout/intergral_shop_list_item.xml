<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_f6f4f4"
        android:layout_height="1dp"/>
    <LinearLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="96dp"
            android:gravity="center"
            android:background="@drawable/integra_shop_list_iv"
            android:layout_height="96dp">
            <ImageView
                android:id="@+id/iv"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/shop_name"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray_66"
                android:layout_height="wrap_content">

            </TextView>
                <TextView
                    android:id="@+id/shop_name_one"
                    android:layout_toEndOf="@+id/shop_name"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/gray_69"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/intergral_num_tv"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/red_f0"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/tv_kc"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/gray_69"
                        android:layout_width="wrap_content"
                        android:background="@drawable/integral_kc"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                    </TextView>
                </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_yj"
                    android:textColor="@color/gray_69"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <!--    <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:text="倒计时"
                    android:textSize="12sp"
                    android:textColor="@color/gray_66"
                android:layout_height="wrap_content" />-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="bottom"
                    android:layout_marginTop="5dp"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_days"
                    android:layout_width="wrap_content"
                    android:text="00"
                    android:textSize="12sp"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:textColor="@color/white"
                    android:background="@drawable/integral_djs"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvs"
                    android:layout_toRightOf="@+id/tv_days"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="天"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/red_f0"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_hous"
                    android:layout_toRightOf="@+id/tvs"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="00"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@drawable/integral_djs"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv2"
                    android:layout_toRightOf="@+id/tv_hous"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text=":"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/red_f0"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_minute"
                    android:layout_toRightOf="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="00"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@drawable/integral_djs"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv3"
                    android:layout_toRightOf="@+id/tv_minute"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text=":"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/red_f0"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_second"
                    android:layout_toRightOf="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="00"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_4"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@drawable/integral_djs"
                    android:layout_height="wrap_content" />
                </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_buy"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/mashangqiang"
                        android:layout_width="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="马上抢"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>
        
        
    </LinearLayout>
</LinearLayout>