    <com.base.widget.MyRadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30dp">

        <RadioButton
            android:id="@+id/cuShi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:checked="true"
            android:tag="role_1"
            android:text="厨师"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/caiWu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:tag="role_2"
            android:text="财务"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/guanLi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:tag="role_3"
            android:text="管理员"
            android:textSize="16sp" />
    </com.base.widget.MyRadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/z_round_rect_solid_white"
        android:padding="10dp"
        android:text="厨师只有提交菜单的权限，没有付款的权限，财务只有付款的权限没有向购物车添加食材的权限。管理员可以分配权限。"
        android:textSize="16sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:background="@drawable/r_round_rect_solid_orange_ff7d01"
        android:onClick="onClick"
        android:text="确定添加"
        android:textColor="@color/white"
        android:textSize="18sp" />

