<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.myself.MyNameCardActivity"
    tools:visibility="visible">

    <LinearLayout
        android:id="@+id/auditing_message_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow_fff1d4"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/auditing_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="完善的信息，可以提高您的店铺诚信度。"
            android:textColor="@color/gray_66" />

        <com.base.glide.GlideImageView
            android:id="@+id/auditing_message_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/close_message" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_f5"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.base.glide.GlideImageView
            android:id="@+id/myself_headportrait"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="我的头像"
            android:textColor="@color/gray_68"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/r_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="联系电话："
            android:textColor="@color/black_65"
            android:textSize="16dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_weight="2"
            android:background="@null"
            android:enabled="false"
            android:gravity="center_vertical"
            android:inputType=""
            android:tag="@string/phoneNumber_tag"
            android:textColor="@color/gray_66"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/bindChange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="换绑" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_right_arrow_gary" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="8"
            android:paddingStart="10dp"
            android:text="@string/true_name"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="21">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_weight="20"
                android:background="@null"
                android:enabled="false"
                android:gravity="center_vertical"
                android:imeOptions="actionNext"
                android:inputType=""
                android:tag="@string/realname_tag"
                android:textColor="@color/gray_66"
                android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f5" />

    <LinearLayout
        android:id="@+id/myself_name_card_station_address_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="8"
            android:paddingStart="10dp"
            android:text="@string/stationAddress"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="21"
            android:gravity="end|center_vertical">

            <!--<EditText-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginEnd="5dp"-->
            <!--android:layout_weight="20"-->
            <!--android:background="@null"-->
            <!--android:enabled="false"-->
            <!--android:gravity="center_vertical"-->
            <!--android:imeOptions="actionNext"-->
            <!--android:inputType=""-->
            <!--android:tag="stationAddress"-->
            <!--android:textColor="@color/gray_66"-->
            <!--android:textSize="17dp" />-->
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="查看详情" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_right_arrow_gary" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="8"
            android:paddingStart="10dp"
            android:text="@string/shop_name"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="21">

            <EditText
                android:id="@+id/shop_name_hint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:layout_weight="20"
                android:background="@null"
                android:enabled="false"
                android:gravity="center_vertical"
                android:imeOptions="actionNext"
                android:tag="@string/storeName_tag"
                android:textColor="@color/gray_66"
                android:textSize="17dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/purchaser_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="8"
                android:paddingStart="10dp"
                android:text="@string/place_market_1"
                android:textSize="16dp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="21">

                <EditText
                    android:id="@+id/market_nameCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="20"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:tag="@string/marketName_tag"
                    android:textColor="@color/gray_66"
                    android:textSize="17dp" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="8"
                android:paddingStart="10dp"
                android:text="@string/market_NO"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="21">

                <EditText
                    android:id="@+id/market_NO"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="20"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:tag="@string/storeNumber_tag"
                    android:textColor="@color/gray_66"
                    android:textSize="17dp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="8"
                android:paddingStart="10dp"
                android:text="@string/address_detail"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="21">

                <EditText
                    android:id="@+id/address_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="20"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:tag="@string/storeAddress_tag"
                    android:textColor="@color/gray_66"
                    android:textSize="17dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f5" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f5" />

    <LinearLayout
        android:id="@+id/qq_number_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/r_white"
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/qq_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="销售商客服 QQ 号"
            android:textColor="@color/black_65"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/qq_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:tag="qqNumber"
                android:text="添加" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_right_arrow_gary" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f5" />

    <LinearLayout
        android:id="@+id/certification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/r_white"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="实名认证："
            android:textColor="@color/black_65"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_weight="7"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/certification_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="未认证，请认证" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_right_arrow_gary" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f5" />

    <LinearLayout
        android:id="@+id/licence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/r_white"

        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="营业执照："
            android:textColor="@color/black_65"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_weight="21"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/licence_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="证件上传" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_right_arrow_gary" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_f5" />

    <LinearLayout
        android:id="@+id/foodQuality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/r_white"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/foodQuality_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="经营许可证："
            android:textColor="@color/black_65"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_weight="7"
            android:gravity="end|center_vertical">

            <TextView
                android:id="@+id/foodQuality_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="证件上传" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_right_arrow_gary" />

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray_f5" />
</LinearLayout>
