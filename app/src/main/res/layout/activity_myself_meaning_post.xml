<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f2"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="您好，欢迎您提出宝贵的意见和建议。您留下的每个字都将被用来改善我们的服务。" />


    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/z_round_rect_solid_white"
        android:gravity="start"
        android:hint="请留下您的宝贵意见和建议。谢谢。"
        android:padding="10dp"
        android:tag="content" />

    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:background="@drawable/z_round_rect_solid_white"
        android:hint="输入您的手机号或邮箱"
        android:padding="10dp"
        android:tag="contact" />

    <Button
        android:id="@+id/meaning_post_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/r_round_rect_solid_blue_2898eb"
        android:onClick="onClick"
        android:text="确定提交"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>