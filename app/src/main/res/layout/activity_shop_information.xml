<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_6e"
    android:orientation="vertical"
    tools:context=".ui.activity.shopManagement.ShopInformationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"
            android:text="门店名称："/>
        <TextView
            android:id="@+id/tv_shop_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/middle_text"
            android:textAlignment="textStart"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gainsboro"/>
    <LinearLayout
        android:id="@+id/ll_head_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"
            android:text="负责人："/>
        <TextView
            android:id="@+id/tv_head_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_shop_detail"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gainsboro"/>
    <LinearLayout
        android:id="@+id/ll_shop_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"
            android:text="门店地址："/>
        <TextView
            android:id="@+id/tv_shop_address"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_shop_detail"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gainsboro"/>
    <LinearLayout
        android:id="@+id/ll_shop_street_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"
            android:text="门牌号："/>
        <TextView
            android:id="@+id/tv_shop_street_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_shop_detail"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gainsboro"/>
    <LinearLayout
        android:id="@+id/ll_shop_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"
            android:text="门店类型："/>
        <TextView
            android:id="@+id/tv_shop_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_shop_detail"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gainsboro"/>
    <LinearLayout
        android:id="@+id/ll_arrive_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"
            android:text="要求到货时间："/>
        <TextView
            android:id="@+id/tv_arrive_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_shop_detail"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gainsboro"/>
    <LinearLayout
        android:id="@+id/ll_current_consignee"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"
            android:text="当前收货人："/>
        <TextView
            android:id="@+id/tv_current_consignee"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_shop_detail"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/orange_yellow_ff7e01"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/orange_yellow_ff7e01"
            android:text="门店认证"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_is_upload"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"
            android:text="门店形象："/>
        <TextView
            android:id="@+id/tv_is_upload"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textAlignment="textEnd"
            android:layout_marginEnd="5dp"
            android:textColor="@color/orange_yellow_ff7e01"
            android:text="未上传"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_shop_detail"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gainsboro"/>
    <LinearLayout
        android:id="@+id/ll_is_certification"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"
            android:text="营业执照："/>
        <TextView
            android:id="@+id/tv_is_certification"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"
            android:textAlignment="textEnd"
            android:layout_marginEnd="5dp"
            android:textColor="@color/orange_yellow_ff7e01"
            android:text="上传证件"/>
        <ImageView
            android:id="@+id/iv_had_certification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/certification" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_shop_detail"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>


</LinearLayout>