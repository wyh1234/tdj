<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <include layout="@layout/integral_toobar_layout" />
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_below="@+id/intergral_toolbar"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/tv_money"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#ff3333"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="￥"
            android:layout_toLeftOf="@+id/tv_money"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="#ff3333"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_below="@+id/rl"
        android:background="#ecedeb"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <RelativeLayout
        android:layout_below="@+id/view"
        android:id="@+id/zhifubao_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <ImageView
            android:id="@+id/iv_pay1"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/zhifubao_bg" />

        <TextView
            android:id="@+id/tv_pay_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/iv_pay1"
            android:text="支付宝支付"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/sel_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/image_select" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#E6E6E6" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/zhifubao_rl"
        android:id="@+id/weixin_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <ImageView
            android:id="@+id/iv_pay"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/weixin_bg" />

        <TextView
            android:id="@+id/tv_pay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/iv_pay"
            android:text="微信支付"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/tv_pay_name"
            android:textColor="#999999"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/sel_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/image_select" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#E6E6E6" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn"
        android:layout_below="@+id/tv"
        android:background="@mipmap/integral_shop_zhifu_bg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_marginBottom="100dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_height="wrap_content" />
</RelativeLayout>