<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/integral_toobar_layout" />
    <TextView
    android:id="@+id/tv"
    android:layout_below="@+id/intergral_toolbar"
    android:layout_marginTop="50dp"
    android:gravity="center"
    android:text="恭喜，您本次订单已付款成功"
    android:textColor="#ff3333"
    android:textSize="14sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_no"
        android:layout_below="@+id/tv"
        android:layout_marginTop="20dp"
        android:gravity="center"

        android:textColor="@color/black_63"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_below="@+id/tv_no"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv1"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="您本次已支付："
            android:textColor="@color/black_63"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_money"
            android:layout_toRightOf="@+id/tv1"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#ff3333"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



    <Button
        android:id="@+id/btn"
        android:background="@mipmap/integral_shop_zhifu_bg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:text="再次购买"
        android:layout_marginBottom="100dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_height="wrap_content" />
</RelativeLayout>