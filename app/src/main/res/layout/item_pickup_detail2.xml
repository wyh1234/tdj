<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_item"
    android:padding="10dp">
    <ImageView
        android:id="@+id/iv_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/tv_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/middle_text"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/iv_item_icon"
        android:layout_alignTop="@id/iv_item_icon"
        android:layout_marginStart="@dimen/dp_10" />
    <TextView
        android:id="@+id/tv_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/low_text"
        android:layout_alignStart="@id/tv_item_price"
        android:layout_below="@+id/tv_item_price" />
    <TextView
        android:id="@+id/tv_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/low_text"
        android:textColor="@color/black"
        android:layout_alignStart="@+id/tv_item_price"
        android:layout_below="@id/tv_item_info" />
    <TextView
        android:id="@+id/tv_item_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/middle_text"/>
</RelativeLayout>