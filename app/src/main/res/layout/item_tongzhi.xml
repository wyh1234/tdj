<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <CheckedTextView
        android:id="@+id/unread_logo"
        android:background="@drawable/s_read_message"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:tag="0"
        android:layout_width="10dp"
        android:layout_height="10dp" />
    
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="55dp">
    <TextView
        android:id="@+id/tz_title"
        android:text=""
        android:layout_marginTop="5dp"
        android:textColor="#333333"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tz_time"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#999999"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_db" />

    <TextView
        android:id="@+id/tz_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:textColor="#666666"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_check"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="立即查看"
        android:textColor="#2895eb"
        android:background="@drawable/z_round_rect_blue_tz"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>