<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@mipmap/login_close_bg">

        <LinearLayout
            android:id="@+id/login_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="15dp">

            <com.base.glide.GlideImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_back_bg" />
        </LinearLayout>

        <com.base.glide.GlideImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/logo_tm_bg" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <com.base.glide.GlideImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/tongcheng_bg" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp">

        <Button
            android:id="@+id/purchaser_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_weight="1"
            android:background="@mipmap/yxqx_bg"
            android:text="@string/purchaser_login_my"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <View
            android:layout_width="23dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/supplier_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="34dp"
            android:layout_weight="1"
            android:background="@mipmap/yxqx_bg"
            android:text="@string/supplier_login_my"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>


</LinearLayout>