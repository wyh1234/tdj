<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/title"
        android:background="@color/blue_2898eb"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp_40"
            android:src="@mipmap/back_home_one"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="订单支付"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_marginTop="36dp"
            android:src="@mipmap/pay_success"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/iv"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:textColor="@color/black_63"
            android:text="支付成功！"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginTop="33dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_width="match_parent"
        android:background="@color/gray_f5"
        android:layout_height="1dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/black_63"
        android:text="收款单位：武汉淘大集供应链有限公司"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/black_63"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_orderNo"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/black_63"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="16dp"
        android:background="@color/gray_f5"
        android:layout_width="match_parent"
        android:paddingTop="25dp"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/post_ok"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/r_round_rect_solid_blue_2898eb"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>