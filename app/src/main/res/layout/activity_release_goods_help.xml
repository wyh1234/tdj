<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:text="@string/supply_add_success_help1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服电话："
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/supply_add_success_help2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/button_left"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/r_round_rect_solid_blue_2898eb"
            android:gravity="center"
            android:text="逛市场"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/button_right"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/s_round_rect_solid_orage_yellow_fea901"
            android:gravity="center"
            android:text="再发布一个商品"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>