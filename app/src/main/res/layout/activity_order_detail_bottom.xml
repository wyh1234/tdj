<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow_fff1d4"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp">


        <TextView
            android:id="@+id/tv_fukuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总金额：" />

        <TextView
            android:id="@+id/price_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250" />

        <TextView
            android:id="@+id/tv_cash_unit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="元" />

        <TextView
            android:id="@+id/order_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/r_round_rect_orage_ff7d01"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="取消订单"
            android:textColor="@color/orange_yellow_ff7d01" />
        <!--android:background="@drawable/r_round_rect_solid_white"-->
        <TextView
            android:id="@+id/order_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/r_round_rect_solid_orange_ff7d01"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="确认收货"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>