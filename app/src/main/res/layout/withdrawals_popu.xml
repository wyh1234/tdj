<?xml version="1.0" encoding="utf-8"?><!--根布局，常用作蒙层（就是变暗的背景）-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8f000000"
    >
    <!--播放动画的内容，可以认为是popup的主要内容布局-->
    <RelativeLayout
        android:id="@+id/popup_anima"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/del_address_popu_bg"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/chacha"
                    android:padding="@dimen/dp_10"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv"
                android:layout_below="@+id/rl"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="实际到账"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv_1"
                android:layout_below="@+id/tv"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                />
            <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@+id/tv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="代收手续费"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                />
                <TextView
                    android:id="@+id/d_money_tv"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_3"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/rl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:text="转账手续费"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/z_money_tv"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>

            <Button
                android:id="@+id/btn"
                android:layout_below="@+id/rl_3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/r_round_rect_solid_blue_2898eb"
                android:layout_centerHorizontal="true"
                android:layout_width="120dp"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_height="35dp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>