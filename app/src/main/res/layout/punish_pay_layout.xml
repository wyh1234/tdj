<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/integral_toobar_layout" />
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:layout_marginTop="41dp"
        android:textColor="@color/black_63"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray_66"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="12dp"
        android:background="@color/gray_f5"
        android:layout_marginRight="12dp"
        android:layout_height="1dp"/>

    <TextView
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:textSize="14sp"
        android:text="选择支付方式"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/yu_e"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/yu_e_logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:src="@mipmap/keyongyue" />

        <TextView
            android:id="@+id/yu_e_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_toEndOf="@+id/yu_e_logo"
            />


        <ImageView
            android:id="@+id/iv_y_e"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/punish_pay_select_round" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/alipay"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/alipay_logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:src="@mipmap/alipay" />

        <TextView
            android:id="@+id/alipay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_toEndOf="@+id/alipay_logo"
            android:textSize="15sp"
            android:text="支付宝支付" />


        <ImageView
            android:id="@+id/iv_alipay"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/punish_pay_select_round" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/wxpay"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/wxpay_logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:src="@mipmap/wxpay" />

        <TextView
            android:id="@+id/wxpay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/wxpay_logo"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="微信支付" />


        <ImageView
            android:id="@+id/iv_wxpay"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/punish_pay_select_round" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_db" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="@color/gray_f5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/post_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/r_round_rect_solid_blue_2898eb"
            android:text="确认支付"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>