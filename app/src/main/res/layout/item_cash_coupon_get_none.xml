<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/white"
            android:id="@+id/purchaser"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent">

            <com.base.glide.GlideImageView
                android:id="@+id/imageview"
                android:layout_width="50dp"
                android:layout_margin="@dimen/dp_10"
                android:layout_height="50dp"
                app:siv_shape_type="circle"
                />

            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_db" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_cash_coupon_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:paddingBottom="6dp"
                        android:text="￥"
                        android:textColor="@color/white"
                        android:textSize="23dp" />

                    <TextView
                        android:id="@+id/tv_cash_coupon_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="46dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_cash_coupon_use_condition"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="满500可使用"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="end"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                  >
                    <TextView
                        android:id="@+id/bt_cash_coupon_used"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/z_round_rect_stroke_ff7d02_radius_7dp"
                        android:gravity="center"
                        android:text="立即领取"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/bt_cash_coupon_used_none"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:visibility="visible"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/z_round_rect_stroke_ff7d03_radius_7dp"
                        android:gravity="center"
                        android:text="已领取"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

   <!--             <TextView
                    android:id="@+id/bt_cash_coupon_used"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/z_round_rect_stroke_ff7d01_radius_7dp"
                    android:gravity="center"
                    android:text="立即领取"
                    android:textColor="@color/s_orage_yellow_ff7d01_gray66"
                    android:textSize="12sp" />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/left"
                android:layout_toStartOf="@+id/right"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="5dp"
                android:paddingStart="5dp">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="30dp"
                    android:layout_height="16dp"
                    android:background="@drawable/z_round_rect_solid_gray_db_3p"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="30dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/z_round_rect_solid_orange_ff7d01"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_cash_coupon_use_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="新用户全场通用"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/left"
                android:layout_toStartOf="@+id/right"
                android:paddingEnd="5dp"
                android:paddingStart="5dp">

             <!--   <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可领取"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/cash_coupon_get_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张"
                    android:textSize="12sp" />-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/left"
                android:paddingEnd="5dp"
                android:paddingStart="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期:"
                    android:textColor="@color/gray_69"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/validity_stat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017.06.23"
                    android:textColor="@color/gray_69"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textColor="@color/gray_69"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/validity_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017.06.23"
                    android:textColor="@color/gray_69"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_bottom_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/left"
                android:paddingEnd="5dp"
                android:paddingStart="5dp">
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期:"
                    android:textColor="@color/gray_69"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_db" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:text="删除"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>