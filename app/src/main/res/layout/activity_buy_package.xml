<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.pay.BuyPackageActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray_f6f4f4"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_pickup_ad"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/pickup_banner" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pickup_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_text"
                android:gravity="center"
                android:text="温馨提示：一天只可以充值一次淘钱包。"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">
                <CheckBox
                    android:id="@+id/cb_auto_renew"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:button="@null"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/blue_select_round"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/blue_2898eb"
                    android:textSize="@dimen/low_text"
                    android:text="当《淘钱包》小于200时，将自动从《可提现余额》中续费200元，可随时取消。"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/alipay"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/large_text"
                    android:text="支付宝"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/cb_ali_pay"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:button="@null"
                    android:layout_gravity="center"
                    android:background="@drawable/blue_select_round"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_6a"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/wxpay"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/large_text"
                    android:text="微信支付"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/cb_wechat_pay"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:button="@null"
                    android:layout_gravity="center"
                    android:background="@drawable/blue_select_round"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_6a"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/balance_pay"/>
                <TextView
                    android:id="@+id/tv_rest_fee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/large_text"
                    android:text="支付宝"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/cb_balance_pay"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:button="@null"
                    android:layout_gravity="center"
                    android:background="@drawable/blue_select_round"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.666"
            android:textColor="@color/black"
            android:paddingStart="20dp"
            android:textSize="@dimen/large_text"
            android:gravity="start|center"
            android:text="总计￥ 99.00元"/>
        <TextView
            android:id="@+id/tv_confirm_pay"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.333"
            android:textSize="@dimen/large_text"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@mipmap/goldbg3x"
            android:text="确认支付"/>
    </LinearLayout>
</LinearLayout>