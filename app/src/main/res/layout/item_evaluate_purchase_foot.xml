<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="20dp"
    tools:context=".ui.activity.evaluate.EvaluatePurchaseActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物流服务评价"
        android:textColor="@color/black_63"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/textView_1"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="送货速度" />

    <TextView
        android:id="@+id/textView_2"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_below="@+id/textView_1"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="服务态度" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/myRatingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textView_1"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/textView_1"
        android:numStars="5"
        android:rating="5"
        android:stepSize="1" />

    <RatingBar
        android:id="@+id/ratingBar2"
        style="@style/myRatingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textView_2"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/textView_2"
        android:numStars="5"
        android:rating="5"
        android:stepSize="1" />

</RelativeLayout>