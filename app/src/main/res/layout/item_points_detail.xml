<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@mipmap/complete"/>
    <TextView
        android:id="@+id/tv_item_title"
        android:textSize="@dimen/middle_text"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/iv_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_item_num"
        android:layout_toRightOf="@+id/tv_item_title"
        android:layout_toLeftOf="@+id/tv_points_amount"
        android:textSize="@dimen/low_text"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_item_date"
        android:layout_alignStart="@+id/tv_item_title"
        android:layout_below="@+id/tv_item_title"
        android:textSize="@dimen/low_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_points_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="25sp"
        android:textColor="@color/red_f0"
/>
</RelativeLayout>