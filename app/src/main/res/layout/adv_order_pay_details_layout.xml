<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/integral_toobar_layout" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="210dp">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="83dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/zhifu_success"
            android:layout_height="83dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/iv"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:textSize="21sp"
            android:text="支付成功"
            android:textColor="@color/blue_2898eb"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:background="@drawable/adv_pay_success_rl_shap"
        android:layout_marginRight="12dp"
        android:layout_height="115dp">
        <RelativeLayout
            android:layout_weight="1"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="收款单位"
                android:textColor="#222222"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:text="武汉淘大集供应链有限公司"
                android:textColor="#222222"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView

                android:layout_width="wrap_content"
                android:text="订单金额"
                android:textColor="#222222"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_money"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textColor="#FD0202"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="订单编号"
                android:textColor="#222222"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_orderNo"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textColor="#222222"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="49dp">
        <Button
            android:id="@+id/btn_left"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="查看投放计划"
            android:gravity="center"
            android:background="@drawable/adv_pay_success_button_shap"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:layout_width="18dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_right"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/blue_2898eb"
            android:text="个人中心"
            android:background="@drawable/adv_pay_success_button_one_shap"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>