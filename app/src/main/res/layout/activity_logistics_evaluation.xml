<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.orderPlace.LogisticsEvaluationActivity">
    <TextView
        android:id="@+id/tv_tips"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/middle_text"
        android:gravity="center"
        android:textColor="@color/orange_yellow_ff7d01"
        android:text="您对配送员满意吗？"
        android:background="@color/yellow_fff1d4"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gray_6e"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">
        <com.base.glide.GlideImageView
            android:id="@+id/giv_driver_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="2dp"
            android:src="@drawable/myself_headportrait"
            app:siv_border_color="@color/white_90"
            app:siv_border_width="2dp"
            app:siv_shape_type="circle" />
        <TextView
            android:id="@+id/tv_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/giv_driver_icon"
            android:layout_toEndOf="@id/giv_driver_icon"
            android:layout_alignTop="@id/giv_driver_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/middle_text"
            android:text="王二小"/>
        <TextView
            android:id="@+id/tv_delivery_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_driver_name"
            android:layout_alignStart="@+id/tv_driver_name"
            android:textSize="@dimen/low_text"
            android:layout_marginTop="10dp"
            android:text="2019年06月12日 11：20"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_satisfied"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/bg_unselect_evaluation"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_satisfied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/gray_6a"
                android:drawableLeft="@mipmap/satisfied"
                android:text="满意"
                android:textSize="@dimen/large_text" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_unsatisfied"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/bg_unselect_evaluation"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_unsatisfied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/gray_6a"
                android:drawableLeft="@mipmap/unsatisfied"
                android:text="不满意"
                android:textSize="@dimen/large_text" />
        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:id="@+id/tv_evaluation_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/middle_text"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/orange_yellow_ff7d01"
        android:text="请选择原因（我们会对配送员进行管束）"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_problem_list"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_add_evaluation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_evaluation_content"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="@dimen/dp_10"
            android:padding="8dp"
            android:textSize="@dimen/middle_text"
            android:textColor="@color/black"
            android:gravity="top|left"
            android:hint="您的反馈会督促我们做的更好"
            android:background="@drawable/bg_unselect_evaluation"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/cart_checked"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:drawableLeft="@drawable/s_select_round"
                android:drawablePadding="5dp"
                android:text="匿名评价"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_commit_evaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/s_orage_yellow_round_rect"
            android:layout_gravity="bottom"
            android:textSize="@dimen/large_text"
            android:textColor="@color/white"
            android:text="提交评价"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_evaluation_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/middle_text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_6a"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_smile_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/smile_face"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_smile_face"
                android:textColor="@color/orange_yellow_ff7d01"
                android:textSize="@dimen/middle_text"
                android:layout_margin="5dp"
                android:text="配送司机很辛苦，有您的支持和反馈，我们会做的更好"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>