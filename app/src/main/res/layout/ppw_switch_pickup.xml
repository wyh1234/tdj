<?xml version="1.0" encoding="utf-8"?><!--根布局，常用作蒙层（就是变暗的背景）-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8f000000">
    <!--播放动画的内容，可以认为是popup的主要内容布局-->
    <RelativeLayout
        android:id="@+id/popup_anima"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/iv_message_bg"
                android:layout_width="313dp"
                android:layout_height="284.4dp"
                android:layout_gravity="center"
                android:background="@mipmap/pickupbg">
                <TextView
                    android:id="@+id/tv_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/large_text"
                    android:layout_margin="10dp"
                    android:textColor="@color/orange_yellow_ff7d01"
                    android:text="当前开通状态："/>
                <LinearLayout
                    android:id="@+id/ll_pick_up_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_item_status"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_pickup_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/low_text"/>
                    <TextView
                        android:id="@+id/tv_pickup_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:textSize="@dimen/low_text"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_pickup_time"
                    android:layout_below="@+id/ll_pick_up_info"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/low_text"/>
                <TextView
                    android:id="@+id/tv_pickup_time_2"
                    android:layout_below="@+id/tv_pickup_time"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/low_text"/>
                <TextView
                    android:id="@+id/tv_pickup_time_3"
                    android:layout_below="@+id/tv_pickup_time_2"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/low_text"/>
                <TextView
                    android:id="@+id/tv_pickup_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/low_text"
                    android:textColor="@color/red_f0"
                    android:background="#FFEDEB"
                    android:layout_marginStart="38dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/btn_message_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_text"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="30dp"
                    android:background="@drawable/bg_round_button_orange"/>
            </RelativeLayout>
            <Button
                android:id="@+id/btn_close_ppw"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/close_circle"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>