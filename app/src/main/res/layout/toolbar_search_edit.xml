<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:popupTheme="@style/ToolbarPopupTheme"
    tools:context=".ui.activity.homepage.SearchBaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/search_edit_group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/search_heard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="0.5dp"
                android:background="@drawable/z_rect_half_letf_round"
                android:gravity="center_vertical"
                android:textSize="16sp" />

            <com.base.widget.my_edittext.UserNameEditText
                android:id="@+id/search_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="-0.5dp"
                android:background="@drawable/z_rect_half_right_round"
                android:gravity="center_vertical"
                android:hint="@string/search_text"
                android:drawablePadding="5dp"
                android:imeOptions="actionDone"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="搜索"
            android:textSize="22sp" />
    </LinearLayout>
</android.support.v7.widget.Toolbar>


