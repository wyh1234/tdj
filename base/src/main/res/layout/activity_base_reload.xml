<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_reload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/title"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_help1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="请检查您的网络或选择重新加载页面~"
        android:textColor="@color/black_63"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_help2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_help1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="哎呀！网络好像有点问题"
        android:textColor="@color/black_63" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/tv_help2"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_not_network" />

    <TextView
        android:id="@+id/tv_reloading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_help1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/z_round_half_orange_ff7d01"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:text="重新加载"
        android:textColor="@color/orange_yellow_ff7d01" />
</RelativeLayout>